# Travira Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/travira"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/onboarding"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/onboarding"

# OpenAI Configuration
OPENAI_API_KEY="sk-..."

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_TRAVIRA_PRICE_ID="price_..."

# SendGrid Configuration
SENDGRID_API_KEY="SG...."
SENDGRID_FROM_EMAIL="deals@travira.net"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Cron Job Security (generate a random 32+ character string)
CRON_SECRET_TOKEN="your-secure-random-token-here-32-chars-minimum"

# Optional: Feature Flags
NEXT_PUBLIC_FEATURE_ONBOARDING="true"
NEXT_PUBLIC_FEATURE_DASHBOARD="true"
NEXT_PUBLIC_FEATURE_EMAIL_NOTIFICATIONS="true"

# Optional: Analytics
NEXT_PUBLIC_ANALYTICS_ID=""

# Optional: Observability
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Optional: Rate Limiting
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
