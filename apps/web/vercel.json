{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "ignoreCommand": "node scripts/skip-ci.js",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 90
    }
  },
  "crons": [
    {
      "path": "/api/deals/generate-scheduled?frequency=every_3_days",
      "schedule": "0 9 */3 * *"
    },
    {
      "path": "/api/deals/generate-scheduled?frequency=weekly",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/deals/generate-scheduled?frequency=bi_weekly",
      "schedule": "0 9 1,15 * *"
    },
    {
      "path": "/api/deals/generate-scheduled?frequency=monthly",
      "schedule": "0 9 1 * *"
    }
  ],
  "buildCommand": "cd ../../ && chmod +x scripts/vercel-build.sh && ./scripts/vercel-build.sh",
  "installCommand": "pnpm install"
}